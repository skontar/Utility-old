# Status bar
bar {
    output eDP1
    output eDP-1
    output HDMI1
    output HDMI-1
    output HDMI2
    output HDMI-2
    output DP2-2
    output DP-2-2
    font pango: FontAwesome, Hack 11.5
    height 32
    tray_output primary
    tray_padding 4
    status_command i3blocks
    i3bar_command i3bar -t
    colors {
        background         #00000099
    }
    strip_workspace_numbers yes
}

bar {
	output DP2-1
    output DP-2-1
    font pango: Hack, FontAwesome 11.5
    height 32
    tray_output none
    binding_mode_indicator no
    i3bar_command i3bar -t
    colors {
        background         #00000099
    }
    strip_workspace_numbers yes
}

